# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_bot_token_here
BOT_TOKEN=your_bot_token_here

# AI API Keys
ANTHROPIC_API_KEY=sk-ant-your_key_here
ZAI_API_KEY=sk-your_zai_key_here

# Claude CLI Configuration
CLAUDE_CLI_BINARY=claude
CLAUDE_WORKING_DIR=/path/to/working/directory
CLAUDE_MODEL=claude-3-5-sonnet-20241022
CLAUDE_MAX_TOKENS=4096
CLAUDE_TEMPERATURE=0.7
CLAUDE_TIMEOUT=120000
CLAUDE_SYSTEM_PROMPT=
CLAUDE_MAX_HISTORY=50

# Bot Options
NODE_ENV=development

# Polling Configuration
POLLING_ENABLED=true
POLLING_INTERVAL=300
POLLING_AUTO_START=true
POLLING_STOP_ON_ERROR=false
POLLING_MAX_RETRIES=3
POLLING_TIMEOUT=30000

# Session Configuration
SESSION_TTL=3600
SESSION_MAX=1000
SESSION_STORAGE=memory
SESSION_CLEANUP_INTERVAL=60000

# API Configuration
API_BASE_URL=
API_TIMEOUT=30000
API_MAX_RETRIES=3
API_RETRY_DELAY=1000

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=text

# Webhook Configuration (optional, use polling by default)
# WEBHOOK_URL=https://your-domain.com
# WEBHOOK_PORT=3000
# WEBHOOK_HOST=0.0.0.0
# WEBHOOK_PATH=/telegram-webhook
